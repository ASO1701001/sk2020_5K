<!-- サイドバーメニュー -->
<div class="ui modal">
  <%= link_to "デバッグメニュー", :root, class: "header" %>
  <div class="ui list">
    <div class="item">
      <i class="users icon"></i>
      ユーザID:
      <% if user_signed_in? %>
        <%= current_user.id %>
      <% else %>
        未ログイン
      <% end %>
    </div>
  </div>
  <div class="ui actions">
    <% if user_signed_in? %>
      <%= link_to "サインアウト", :account_signout, class: 'ui red button' %>
    <% else %>
      <%= link_to "サインイン", :account_signin, class: 'ui blue button' %>
      <%= link_to "サインアップ", :account_signup, class: 'ui green button' %>
    <% end %>
  </div>


</div>

<script>
    $('body').keydown(function (e) {
        // alert(JSON.stringify(e.keyCode))
        // Shift + d を入力するとデバッグメニューを表示する
        if (e.shiftKey) {
            if (e.keyCode === 68) {
                $('.ui.modal').modal('show');
            }
        }
    });
</script>